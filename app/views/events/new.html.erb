<h1>Create Event</h1>

<%= simple_form_for(@event) do |f| %>
  <%= f.input :name %>
  <%= f.input :location %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zip_code %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :description, :as => :text, :input_html => { class: 'input-large', :rows => 6 } %>
  <%= f.button :submit, :class => 'btn btn-large btn-success' %>
<% end %>