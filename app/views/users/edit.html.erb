<%= render 'layouts/header' %>

<h1>Update user #<%= @user['id'] %></h1>

<p id="notice"><%= @user.errors.full_messages.first if @user.errors.any? %></p>

<%= simple_form_for @user do |f| %>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :email_address %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.input :address %>
	<%= f.input :city %>
	<%= f.input :state %>
	<%= f.input :zip_code %>
	<%= f.button :submit, :class => 'btn btn-large btn-primary' %>
<% end %>

<%= link_to 'Show', @user %>