<h1>User Profile</h1>

<p id="notice"><%= notice %></p>

<table class="users table">
	<tr>
		<th>ID</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email Address</th>
	</tr>
		<tr>
			<td><%= @user['id'] %></td>		
		    <td><%= @user['first_name'] %></td>
		    <td><%= @user['last_name'] %></td>
		    <td><%= @user['email_address'] %></td>
		</tr>
</table>

<% if signed_in? %>
	<%= link_to 'Edit', edit_user_path(@user) %>
<% else %>
<% end %>