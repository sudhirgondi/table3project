<div id="interest_carousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#interest_carousel" data-slide-to="0" class="active"></li>
    <li data-target="#interest_carousel" data-slide-to="1"></li>
    <li data-target="#interest_carousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="/assets/skydive.jpg" alt="skydiving">
      <div class="carousel-caption">
        <h3>Skydiving</h3>
        <p>Want to feel the rushing wind in your face?</p>
      </div>
    </div>
    <div class="item">
      <img src="assets/hike.jpg" alt="hiking">
      <div class="carousel-caption">
        <h3>Hiking</h3>
        <p>Climb to the top with a buddy.</p>
      </div>
    </div>
    <div class="item">
      <img src="assets/bike.jpg" alt="bike">
      <div class="carousel-caption">
        <h3>Bicycling</h3>
        <p>Reach the limits.</p>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#interest_carousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#interest_carousel" data-slide="next">
    <span class="icon-next"></span>
  </a>
</div><!--end of carousel-->


<div class="span4">
  <table class="table">
    <thead>
      <tr>
        <th>Interest Name</th>
      </tr>
    </thead>
    <tbody>
      <% @interests.each do |interest| %>
        <tr>
          <td><%= link_to interest.name, interest_path(interest) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



